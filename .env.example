# Telegram bot token from @BotFather
BOT_TOKEN=123456:ABCDEF_your_token_here

# MySQL (or MariaDB) async URL. Make sure db uses utf8mb4.
# Example:
# mysql+asyncmy://user:pass@127.0.0.1:3306/kwbot?charset=utf8mb4
DATABASE_URL=mysql+asyncmy://username:password@127.0.0.1:3306/dbname?charset=utf8mb4

# Optional: minimum seconds between identical auto-replies per rule (per group)
RULE_COOLDOWN_SECONDS=8

# Optional: cache TTL for rules (seconds)
RULE_CACHE_TTL_SECONDS=60
